<!DOCTYPE html>
<html>
  <head>
    	<title>MyTwitter</title>
    	<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  	</head>
	<body> 
  		<header role="banner">
   		<nav class="navbar navbar-default navbat-fixed-top" role="navigation">
  		<div class="container-fluid">
    	<div class="navbar-header">
    	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
    	<span class="icon-bar"></span>
    	<span class="icon-bar"></span>
    	<span class="icon-bar"></span>
    	</button>
      	<a class="navbar-brand" href="#">My Twitter</a>
    	</div>
    	<div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
    	<ul class="nav navbar-nav navbar-right">
     
       <% if !user_signed_in? %>
            <li>
            <a href="users/sign_in" class="btn btn-info" role="button"><span class="glyphicon glyphicon-log-in"></span>SignIn</a>
            </li>
              
      		<li>
      		<a href="users/sign_up" class="btn btn-info" role="button"><span class="glyphicon glyphicon-user"></span> SignUp</a>
      		</li>
       	<% end %>
 		<% if user_signed_in? %>
 			<a href="mypost" class="btn btn-info" role="button">MyPost</a>
 			<%= link_to "New Post", new_post_path, class: 'btn btn-info'  %>
      <%= link_to 'SignOut', destroy_user_session_path, :method => :delete, class: 'btn btn-info' %>
    	<% end %>
       	
        </ul>
       </div>
       </div>
       </nav>
       </header>

       <%= yield %>
    </body>
</html>
